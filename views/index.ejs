<!DOCTYPE html>
<html>
<head>
  <title>Employee List</title>
</head>
<body>
  <h1>Employee List</h1>
  <form action="/add-employee" method="POST">
    <!-- Form fields for firstName, lastName, id, salary, department, email -->
    <button type="submit">Add Employee</button>
  </form>
  
  <table border="1">
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Salary</th>
      <th>Department</th>
      <th>Email</th>
    </tr>
    <% employees.forEach((employee) => { %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.firstName %></td>
        <td><%= employee.lastName %></td>
        <td><%= employee.salary %></td>
        <td><%= employee.department %></td>
        <td><%= employee.email %></td>
      </tr>
    <% }); %>
  </table>
</body>
</html>
